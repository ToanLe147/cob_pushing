<?xml version="1.0"?>
<launch>

  <arg name="robot"/>
  <arg name="sbpl"/>

  <!-- delete old parameters -->
  <rosparam command="delete" param="/move_base"/>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base_node" output="screen">
    <remap from="cmd_vel" to="base/twist_mux/command_navigation"/>
    <remap from="odom" to="base/odometry_controller/odometry"/>
    <param name="controller_frequency" value="10"/>
    <param name="controller_patience" value="100.0" />
    <param name="footprint_padding" value="0.01" />

    <!-- Local planner: Teb Local Planner -->
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS"/>
    <!-- <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS" /> -->

    <!-- using SBPL_lattice_planner for global planning -->
    <param name="base_global_planner" value="SBPLLatticePlanner" if="$(arg sbpl)"/>
    <param name="SBPLLatticePlanner/primitive_filename" value="$(find cob_pushing)/launch/includes/mprim/cob_only_32.mprim" if="$(arg sbpl)"/>
    <rosparam file="$(find cob_pushing)/robots/cob4-8/config/sbpl_global_params.yaml" command="load" if="$(arg sbpl)"/>

    <!--- load common configuration files -->
    <rosparam file="$(find cob_pushing)/robots/$(arg robot)/config/costmap_common_params_combined.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find cob_pushing)/robots/$(arg robot)/config/costmap_common_params_combined.yaml" command="load" ns="local_costmap" />

    <!--- load global navigation specific parameters -->
    <rosparam file="$(find cob_pushing)/robots/$(arg robot)/config/local_costmap_params_combined.yaml" command="load" ns="local_costmap"/>
    <rosparam file="$(find cob_pushing)/robots/$(arg robot)/config/global_costmap_params_combined.yaml" command="load" ns="global_costmap"/>

    <!--- load planner parameters -->
    <rosparam file="$(find cob_pushing)/robots/$(arg robot)/config/base_local_planner_params_combined.yaml" command="load" />

    <!-- Recovery Behavior -->
    <rosparam param="recovery_behaviors">
      [{name: backwards, type: twist_recovery/TwistRecovery}]
  </rosparam><rosparam file="$(find cob_pushing)/robots/$(arg robot)/config/backwards.yaml" command="load" ns="backwards"/>
  </node>

</launch>
